---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';

export async function getStaticPaths() {
  const projects = await getCollection('projects', ({ data }) => 
    import.meta.env.PROD ? data.draft !== true : true
  );
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

interface Props { project: CollectionEntry<'projects'>; }

const { project } = Astro.props;
const { Content } = await project.render();
const { title, description, image, thumbnail, stack, gameLink, role, genre } = project.data;

// Helper to check if thumbnail is a video
const isVideo = (src: string | undefined) => {
  if (!src) return false;
  const ext = src.split('.').pop()?.toLowerCase();
  return ['mp4', 'webm', 'ogg', 'mov'].includes(ext || '');
};

const showVideo = isVideo(thumbnail);
---

<Layout title={title} description={description}>
  <article class="project-container">
    
    <!-- Header Media -->
    <div class="media-wrapper glass-panel" transition:name={`project-media-${project.slug}`}>
      {showVideo ? (
        <video src={thumbnail} autoplay loop muted playsinline controls preload="metadata" class="hero-media" />
      ) : (
        /* If thumbnail is an image URL/Path, use standard img, otherwise use optimized Image component for the cover */
        thumbnail ? (
          <img src={thumbnail} alt={title} class="hero-media" />
        ) : (
          <Image src={image} alt={title} class="hero-media" width={1920} height={1080} loading="eager" />
        )
      )}
    </div>

    <div class="content-grid">
      <!-- Main Content -->
      <div class="main-column">
        <header>
          <div class="breadcrumbs">
            <a href="/Portfolio/" class="back-link">‚Üê Projects</a> / <span class="current">{title}</span>
          </div>
          <h1 transition:name={`project-title-${project.slug}`}>{title}</h1>
          <p class="lead">{description}</p>
        </header>

        <div class="prose-container">
          <Content />
        </div>
      </div>

      <!-- Sidebar Metadata -->
      <aside class="meta-sidebar">
        <div class="glass-panel sticky-card">
          <div class="meta-group">
            <h3>Role</h3>
            <p>{role}</p>
          </div>
          
          <div class="meta-group">
            <h3>Genre</h3>
            <p>{genre}</p>
          </div>

          <div class="meta-group">
            <h3>Tech Stack</h3>
            <div class="tags">
              {stack.map(t => <span>{t}</span>)}
            </div>
          </div>

          {gameLink && (
            <a href={gameLink} target="_blank" rel="noopener" class="play-btn">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M8 5v14l11-7z"/></svg>
              Play Experience
            </a>
          )}
        </div>
      </aside>
    </div>

  </article>
</Layout>

<style>
  .project-container {
    max-width: 1200px;
    margin: 8rem auto 4rem;
    padding: 0 2rem;
  }

  /* Media */
  .media-wrapper {
    width: 100%;
    aspect-ratio: 21/9;
    border-radius: 24px;
    overflow: hidden;
    margin-bottom: 4rem;
    background: #111;
  }

  .hero-media {
    width: 100%; height: 100%;
    object-fit: cover;
  }

  /* Layout Grid */
  .content-grid {
    display: grid;
    grid-template-columns: 1fr 300px;
    gap: 4rem;
  }

  /* Main Column */
  .breadcrumbs {
    font-size: 0.9rem;
    color: var(--text-muted);
    margin-bottom: 1.5rem;
  }
  .back-link { color: var(--text-muted); text-decoration: none; transition: color 0.2s; }
  .back-link:hover { color: white; }
  .current { color: white; }

  header h1 {
    font-size: 3rem;
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 1rem;
    font-family: var(--font-heading);
  }

  .lead {
    font-size: 1.25rem;
    color: var(--text-muted);
    line-height: 1.6;
    margin-bottom: 2rem;
    border-bottom: 1px solid var(--card-border);
    padding-bottom: 2rem;
  }

  /* Sidebar */
  .sticky-card {
    position: sticky;
    top: 6rem;
    padding: 2rem;
    border-radius: 16px;
  }

  .meta-group { margin-bottom: 1.5rem; }
  
  .meta-group h3 {
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-muted);
    margin-bottom: 0.5rem;
  }

  .meta-group p {
    font-weight: 500;
    color: white;
    font-size: 1.1rem;
  }

  .tags { display: flex; flex-wrap: wrap; gap: 0.5rem; }
  
  .tags span {
    font-size: 0.85rem;
    padding: 0.3rem 0.8rem;
    background: rgba(255,255,255,0.1);
    border-radius: 6px;
  }

  .play-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    width: 100%;
    padding: 1rem;
    background: var(--accent-primary);
    color: white;
    font-weight: 700;
    border-radius: 12px;
    text-decoration: none;
    margin-top: 1rem;
    transition: background 0.2s;
  }
  .play-btn:hover { background: var(--accent-hover); }

  @media (max-width: 900px) {
    .content-grid { grid-template-columns: 1fr; gap: 2rem; }
    .media-wrapper { aspect-ratio: 16/9; margin-bottom: 2rem; }
    .sticky-card { position: relative; top: 0; }
  }
</style>